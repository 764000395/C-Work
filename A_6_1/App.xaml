<Application x:Class="MyWpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWpfApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
     
            <Style x:Key="T2">
            <Setter Property="Control.Foreground" Value="Red"></Setter>
            <Setter Property="Control.Background" Value="Orange"></Setter>
            <Setter Property="Control.FontSize" Value="50"></Setter>
        </Style>
        <Style x:Key="T1">
            <Setter Property="Control.Foreground" Value="Red"></Setter>
            <Setter Property="Control.Background" Value="Green"></Setter>
            <Setter Property="Control.FontSize" Value="34"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
