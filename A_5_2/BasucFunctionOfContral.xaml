<Window x:Class="WpfApplication1.BasucFunctionOfContral"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="BasucFunctionOfContral" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" Margin="30">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="要显示的文字"/>
            <TextBox Name="textbox" Width="150" Margin="5 0"/>
            <Button Content="确定" Padding="5 2" Width="45" Height="20" Click="Button_Click"/>
        </StackPanel>
        <TextBox Name="textbox1" Width="280" Height="120" Margin="0 25" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btn1" Content="增大字体" Margin="15" Padding="5 2" Click="Button_Click_1"/>
            <Button Name="btn2" Content="缩小字体" Margin="15" Padding="5 2" Click="Button_Click_2"/>
            <Button Content="改变字体颜色" Margin="15" Padding="5 2" Click="Button_Click_3"/>
        </StackPanel>
    </StackPanel>
</Window>
